            android:name=".Home"
            android:label="MyQuiz"
            android:screenOrientation="portrait" />
        <activity
            android:name=".catogaries"
            android:screenOrientation="portrait" />
        <activity
            android:name=".help"
            android:screenOrientation="portrait" />
